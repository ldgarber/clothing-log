<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @item.brand %>
</p>

<p>
  <strong>Color:</strong>
  <%= @item.color %>
</p>

<% if @item.categories.length > 0 %> 
  <p>
    <strong>Categories:</strong>
    <% @item.categories.each do |category| %> 
      <%= category.name %>
    <% end %> 
  </p>
<% end %> 

<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
