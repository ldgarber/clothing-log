<div class="col-sm-3">
  <div class="card">
    <div class="card-block">
      <h4 class="card-title"><%= outfit.display_date %></h4>
      <div class="card-block"><%= render outfit.items %></div>
      <%= link_to 'Show', outfit, :class => "card-link" %>
      <%= link_to 'Edit', edit_outfit_path(outfit), :class => "card-link" %>
      <%= link_to 'Destroy', outfit, method: :delete, data: { confirm: 'Are you sure?' },:class => "card-link" %>
    </div>
  </div>
</div>
