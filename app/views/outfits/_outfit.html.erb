<div class="col-sm-4">
  <div class="card border-1 rounded" style="padding: 10px; margin-top: 10px">
    <% if outfit.fitpic.exists? %>
      <%= image_tag outfit.fitpic.url(:thumb), :class => "card-img-top" %>
    <% end %> 
    <div class="card-body">
      <h4 class="card-title" style="margin-top: 10px"><%= outfit.display_date %></h4>
      <%= link_to outfit.user.email if outfit.user != current_user %>
      <div><%= outfit.description %></div>
      <div><%= render outfit.items %></div>
      <%= link_to 'Show', outfit, :class => "card-link" %>
      <%= link_to 'Edit', edit_outfit_path(outfit), :class => "card-link" %>
      <%= link_to 'Destroy', outfit, method: :delete, data: { confirm: 'Are you sure?' },:class => "card-link" %>
    </div>
  </div>
</div>
